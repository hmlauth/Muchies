<h2>Not Devoured</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <p>I am not devoured</p>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured</h2>

<ul>
  {{#each cats}}
    {{#if devoured}}
    <p>I am devoured</p>
    {{/if}}
  {{/each}}
</ul>

<h2>Place an order:</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name</label>
    <input type="text" id="new-burger" name="name">
  </div>

  <button type="submit-order">Submit Order</button>
</form>
